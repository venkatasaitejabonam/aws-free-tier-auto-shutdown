{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:StopInstances",
        "ec2:DescribeInstances",
        "dynamodb:ListTables",
        "dynamodb:DeleteTable",
        "lambda:ListFunctions",
        "lambda:DeleteFunction",
        "apigateway:GET",
        "apigateway:DELETE",
        "s3:ListAllMyBuckets",
        "s3:ListBucket",
        "s3:DeleteObject",
        "s3:DeleteBucket"
      ],
      "Resource": "*"
    }
  ]
}
